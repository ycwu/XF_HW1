                Grid.Row="1"
                Grid.Column="1"
                FontSize="30"
                HorizontalOptions="Center"
                Text="5"
                TextColor="Black"
                VerticalOptions="Center" />
            <Label
                Grid.Row="1"
                Grid.Column="2"
                FontSize="30"
                HorizontalOptions="Center"
                Text="6"
                TextColor="Black"
                VerticalOptions="Center" />
            <Label
                Grid.Row="1"
                Grid.Column="3"
                FontSize="30"
                HorizontalOptions="Center"
                Text="*"
                TextColor="White"
                VerticalOptions="Center" />
            <Label
                Grid.Row="2"
                Grid.Column="0"
                FontSize="30"
                HorizontalOptions="Center"
                Text="1"
                TextColor="Black"
                VerticalOptions="Center" />
            <Label
                Grid.Row="2"
                Grid.Column="1"
                FontSize="30"
                HorizontalOptions="Center"
                Text="2"
                TextColor="Black"
                VerticalOptions="Center" />
            <Label
                Grid.Row="2"
                Grid.Column="2"
                FontSize="30"
                HorizontalOptions="Center"
                Text="3"
                TextColor="Black"
                VerticalOptions="Center" />
            <Label
                Grid.Row="2"
                Grid.Column="3"
                FontSize="30"
                HorizontalOptions="Center"
                Text="-"
                TextColor="White"
                VerticalOptions="Center" />
            <Label
                Grid.Row="3"
                Grid.Column="1"
                FontSize="30"
                HorizontalOptions="Center"
                Text="0"
                TextColor="Black"
                VerticalOptions="Center" />
            <Label
                Grid.Row="3"
                Grid.Column="3"
                FontSize="30"
                HorizontalOptions="Center"
                Text="+"
                TextColor="White"
                VerticalOptions="Center" />
            <Label
                Grid.Row="4"
                Grid.Column="0"
                FontSize="30"
                HorizontalOptions="Center"
                Text="C"
                TextColor="White"
                VerticalOptions="Center" />
            <Label
                Grid.Row="4"
                Grid.Column="2"
                FontSize="30"
                HorizontalOptions="Center"
                Text="="
                TextColor="White"
                VerticalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage>